{
  "name": "logistica-grupo12-tpi",
  "version": "1.0.0",
  "description": "Microservicio de Log√≠stica y Transporte - TPI Desarrollo de Software 2025 - UTN FRRE - Grupo 12",
  "author": "Grupo 12 - UTN FRRE",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FRRe-DS/2025-12-TPI.git"
  },
  "bugs": {
    "url": "https://github.com/FRRe-DS/2025-12-TPI/issues"
  },
  "homepage": "https://github.com/FRRe-DS/2025-12-TPI#readme",
  "keywords": [
    "nestjs",
    "typescript",
    "microservices",
    "logistics",
    "shipping",
    "prisma",
    "postgresql",
    "redis",
    "tpi",
    "utn",
    "frre"
  ],
  "workspaces": [
    "shared/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=shared/database --workspace=shared/types --workspace=shared/utils",
    "start:config": "npm run start:dev --workspace=services/config-service",
    "start:stock": "npm run start:dev --workspace=services/stock-integration-service",
    "start:shipping": "npm run start:dev --workspace=services/shipping-service",
    "start:operator": "npm run start:dev --workspace=services/operator-interface-service",
    "start:all": "concurrently \"npm run start:config\" \"npm run start:stock\" \"npm run start:shipping\" \"npm run start:operator\"",
    "dev": "npm run build:shared && npm run start:all",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"shared/**/*.ts\" \"services/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test,shared,services}/**/*.ts\" --fix",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:cov": "npm run test:cov --workspaces",
    "clean": "rimraf dist node_modules shared/*/dist shared/*/node_modules services/*/dist services/*/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.3",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.0",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "keycloak-connect": "^22.0.0",
    "nest-keycloak-connect": "^1.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/keycloak-connect": "^7.0.0",
    "@types/node": "^22.18.9",
    "@types/node-fetch": "^2.6.13",
    "@types/phoenix": "^1.6.6",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nock": "^13.4.0",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "ts-node shared/database/prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "shared/**/*.(t|j)s",
      "services/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@logistics/(.*)$": "<rootDir>/shared/$1/src",
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}