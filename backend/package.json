{
  "name": "logistica-grupo12-tpi",
  "version": "1.0.0",
  "description": "Microservicio de Log√≠stica y Transporte - TPI Desarrollo de Software 2025 - UTN FRRE - Grupo 12",
  "author": "Grupo 12 - UTN FRRE",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FRRe-DS/2025-12-TPI.git"
  },
  "bugs": {
    "url": "https://github.com/FRRe-DS/2025-12-TPI/issues"
  },
  "homepage": "https://github.com/FRRe-DS/2025-12-TPI#readme",
  "keywords": [
    "nestjs",
    "typescript",
    "microservices",
    "logistics",
    "shipping",
    "prisma",
    "postgresql",
    "redis",
    "tpi",
    "utn",
    "frre"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.3",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.0",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "keycloak-connect": "^22.0.0",
    "nest-keycloak-connect": "^1.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/keycloak-connect": "^7.0.0",
    "@types/node": "^22.18.9",
    "@types/node-fetch": "^2.6.13",
    "@types/phoenix": "^1.6.6",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nock": "^13.4.0",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "config/**/*.(t|j)s",
      "modules/**/*.(t|j)s",
      "common/**/*.(t|j)s",
      "prisma/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
