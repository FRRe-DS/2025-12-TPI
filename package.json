{
  "name": "logistica-grupo12-tpi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:backend": "pnpm -r --filter \"./backend/**\" install && pnpm -C backend/shared/database prisma:generate",
    "install:frontend": "pnpm -C frontend install",
    "install:all": "pnpm install && pnpm run install:backend && pnpm run install:frontend",
    "dev:backend": "pnpm -C backend run dev",
    "dev:frontend": "pnpm -C frontend dev",
    "dev": "pnpm run dev:frontend",
    "keycloak:up": "docker compose -f keycloak/docker-compose.yml up -d",
    "keycloak:down": "docker compose -f keycloak/docker-compose.yml down",
    "test": "playwright test",
    "test:frontend": "playwright test tests/frontend",
    "test:frontend:ui": "playwright test tests/frontend --ui",
    "test:frontend:headed": "playwright test tests/frontend --headed",
    "test:frontend:debug": "playwright test tests/frontend --debug",
    "test:api": "playwright test --config=playwright.api.config.ts",
    "test:api:ui": "playwright test --config=playwright.api.config.ts --ui",
    "test:api:headed": "playwright test --config=playwright.api.config.ts --headed",
    "test:api:debug": "playwright test --config=playwright.api.config.ts --debug",
    "test:api:list": "playwright test --config=playwright.api.config.ts --list",
    "test:api:shipping": "playwright test --config=playwright.shipping.config.ts",
    "test:api:shipping:ui": "playwright test --config=playwright.shipping.config.ts --ui",
    "test:api:shipping:headed": "playwright test --config=playwright.shipping.config.ts --headed",
    "test:api:shipping:debug": "playwright test --config=playwright.shipping.config.ts --debug",
    "test:api:shipping:list": "playwright test --config=playwright.shipping.config.ts --list",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "keycloak-js": "^26.2.1",
    "lucide-react": "^0.546.0",
    "next": "16.0.0",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^3.3.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
